---
import { PostsListItem as Item } from '@astro-nx-depla/shared/ui';
import type { IPost } from '@astro-nx-depla/website/entities/post';

export interface Props {
  posts: Array<IPost>;
}

const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post) => (
      <li class="mb-12 md:mb-20">
        <Item post={post} />
      </li>
    ))
  }
</ul>
