---
import { AstroSeo } from '@astrolib/seo';
import { GoogleAnalytics } from '@astrolib/analytics';
import { getImage } from '@astrojs/image';

import { CONFIG } from '@astro-nx-depla/shared/util/config-provider';
import { MetaSEO } from '@astro-nx-depla/website/types';
import { getRelativeUrlByFilePath } from '@astro-nx-depla/website/data-access/url';
import { getCanonical } from '@astro-nx-depla/shared/util/formatting';

import CustomStyles from '~/components/CustomStyles.astro';
import { SplitbeeAnalytics } from '@astro-nx-depla/shared/ui';

const AppConfig = CONFIG.get('app');

export interface Props extends MetaSEO {
  dontUseTitleTemplate?: boolean;
}

const defaultImage = AppConfig.defaultImage
  ? (
      await getImage({
        src: AppConfig.defaultImage,
        alt: 'Default image',
        width: 1200,
        height: 628,
      })
    ).src
  : '';

const {
  title = AppConfig.name,
  description = '',
  image: _image = defaultImage,

  canonical = getCanonical(String(Astro.url.pathname), AppConfig.origin),
  noindex = false,
  nofollow = false,

  ogTitle = title,
  ogType = 'website',

  dontUseTitleTemplate = false,
} = Astro.props;

const image =
  typeof _image === 'string'
    ? new URL(_image, Astro.site)
    : _image && typeof _image['src'] !== 'undefined'
    ? // @ts-ignore
      new URL(getRelativeUrlByFilePath(_image.src), Astro.site)
    : null;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<AstroSeo
  title={title}
  titleTemplate={dontUseTitleTemplate ? '%s' : `%s â€” ${AppConfig.name}`}
  description={description}
  canonical={String(canonical)}
  noindex={noindex}
  nofollow={nofollow}
  openGraph={{
    url: String(canonical),
    title: ogTitle,
    description: description,
    type: ogType,
    images: image
      ? [
          {
            url: image.toString(),
            alt: ogTitle,
          },
        ]
      : undefined,
    // site_name: 'SiteName',
  }}
  twitter={{
    // handle: '@handle',
    // site: '@site',
    cardType: image ? 'summary_large_image' : undefined,
  }}
/>

<CustomStyles />

<!-- Google Site Verification -->
{
  AppConfig.googleSiteVerificationId && (
    <meta
      name="google-site-verification"
      content={AppConfig.googleSiteVerificationId}
    />
  )
}

<!-- Google Analytics -->
{
  AppConfig.googleAnalyticsId && (
    <GoogleAnalytics id={String(AppConfig.googleAnalyticsId)} partytown={true} />
  )
}

{
  AppConfig.splitbeeAnalytics?.enabled && (
    <SplitbeeAnalytics {...AppConfig.splitbeeAnalytics} />
  )
}

<link rel="shortcut icon" href={'/favicon.ico'} />
<link rel="icon" type="image/svg+xml" href={'/favicon.svg'} />
<link rel="mask-icon" href={'/favicon.svg'} color="#8D46E7" />
