---
import '~/assets/styles/base.css';
import { MetaTags } from '@astro-nx-depla/shared/ui';
import BasicScripts from '../js/BasicScripts.astro';

import { app } from '@astro-nx-depla/shared/app';
import { IMetaSEO } from '@astro-nx-depla/shared/types/html';

export interface Props {
  meta?: IMetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = app.config;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
  </head>

  <body
    class="antialiased text-page bg-light dark:text-slate-300 tracking-tight dark:bg-dark"
  >
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
