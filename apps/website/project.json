{
  "name": "website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/website/src",
  "implicitDependencies": ["website-config", "shared-util-astro-remark-plugin-predict-reading-time"],
  "targets": {
    "build": {
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "executor": "@nxtensions/astro:build",
      "options": {},
      "dependsOn": [
        {
          "target": "setup-dotenv-prod",
          "projects": "self"
        },
        {
          "target": "setup-prisma",
          "projects": "self"
        },
        {
          "target": "build-astro-config",
          "projects": "self"
        }
      ]
    },
    "setup-dotenv-dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp .env.dev .env"
        ]
      }
    },
    "setup-dotenv-prod": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp .env.prod .env"
        ]
      }
    },
    "build-astro-config": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node build.mjs"
        ]
      }
    },
    "setup-prisma": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma generate && npx prisma migrate dev"
        ]
      }
    },
    "serve": {
      "executor": "@nxtensions/astro:dev"
    },
    "netlify-cms-proxy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx netlify-cms-proxy-server"
        ]
      }
    },
    "dev": {
      "executor": "@astro-nx-depla/nx:dev-astro-with-netlify-cms",
      "dependsOn": [
        {
          "target": "setup-dotenv-dev",
          "projects": "self"
        },
        {
          "target": "build-astro-config",
          "projects": "self"
        }
      ]
    },
    "preview": {
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "executor": "@nxtensions/astro:preview",
      "options": {}
    },
    "check": {
      "executor": "@nxtensions/astro:check"
    },
    "sync": {
      "executor": "@nxtensions/astro:sync"
    }
  },
  "tags": []
}
