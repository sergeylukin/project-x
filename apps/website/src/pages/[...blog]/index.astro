---
import { PageLayout } from '@astro-nx-depla/shared/layout';
import { SinglePost, ToBlogLink } from '@astro-nx-depla/shared/ui';
import { Post } from '@astro-nx-depla/website/entities/post';

export const getStaticPaths = Post.getPostViewStaticPaths

const { post } = Astro.props;
const meta = await Post.getMetaByPost(post)
---

<PageLayout {meta}>
  <SinglePost post={{ ...post, url: meta.canonical, image: meta.image }} />
  <ToBlogLink />
</PageLayout>
