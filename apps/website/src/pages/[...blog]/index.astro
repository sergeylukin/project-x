---
import { CONFIG } from '@astro-nx-depla/shared/util/config-provider';

import Layout from '~/layouts/PageLayout.astro';
import SinglePost from '~/components/blog/SinglePost.astro';
import ToBlogLink from '~/components/blog/ToBlogLink.astro';

import { getCanonical, getPermalink, findImage } from '@astro-nx-depla/shared/utils';
import { fetchPosts } from '@astro-nx-depla/website/data-access/post';

const BLOG = CONFIG.get('entities.post')

export async function getStaticPaths() {
  const BLOG = CONFIG.get('entities.post')
  if (BLOG?.disabled || BLOG?.item?.disabled) return [];
  return (await fetchPosts()).map((post) => ({
    params: {
      blog: post.permalink,
    },
    props: { post },
  }));
}

const { post } = Astro.props;
const url = getCanonical(getPermalink(post.permalink, 'post'));

const meta = {
  title: post.title,
  description: post.description,
  canonical: post.canonical || url,
  image: await findImage(post.image),
  noindex: BLOG?.item?.noindex,
  ogType: 'article',
};
---

<Layout {meta}>
  <SinglePost post={{ ...post, image: meta.image }} url={url} />
  <ToBlogLink />
</Layout>
