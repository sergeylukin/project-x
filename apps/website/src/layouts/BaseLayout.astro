---
import '~/assets/styles/base.css';
import MetaTags from '~/components/MetaTags.astro';
import BasicScripts from '~/components/BasicScripts.astro';

import { MetaSEO } from '~/types';
import { SITE } from '@astro-nx-depla/website/config';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
  </head>

  <body class="antialiased text-page bg-light dark:text-slate-300 tracking-tight dark:bg-dark">
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
