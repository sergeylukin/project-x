{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@astro-nx-depla/nx": ["libs/nx/src/index.ts"],
      "@astro-nx-depla/shared/ui": ["libs/shared/ui/src/index.js"],
      "@astro-nx-depla/shared/util/config-provider": [
        "libs/shared/util/config-provider/src/index.ts"
      ],
      "@astro-nx-depla/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@astro-nx-depla/util/formatting": [
        "libs/shared/util/formatting/src/index.ts"
      ],
      "@astro-nx-depla/util/predict-reading-time": [
        "libs/shared/util/astro-remark-plugin-predict-reading-time/src/index.ts"
      ],
      "@astro-nx-depla/website/config": ["libs/website/config/src/index.js"],
      "@astro-nx-depla/website/data-access/post": [
        "libs/website/data-access/post/src/index.ts"
      ],
      "@astro-nx-depla/website/types": ["libs/website/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
